---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Hr from "@components/Hr.astro";
import ProjectCard from "@components/ProjectCard";
import { useTranslations, defaultLang, type Languages } from "i18n/utils";

// i18n
const currentLang = (Astro.currentLocale as Languages) || defaultLang;
const t = useTranslations(currentLang);
---

<Layout>
  <Header activeNav="projects" />
  <main id="main-content">
    <section id="hero">
      <h1>{t("projects.heading")}</h1>
      <!-- <a
        target="_blank"
        href="/rss.xml"
        class="rss-link"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rss-icon"
          ><path
            d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
          ></path><path
            d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
          ></path><circle cx="6" cy="18" r="2"></circle>
        </svg>
        <span class="sr-only">RSS Feed</span>
      </a> -->

      <p>
        {t("projects.intro")}
      </p>
    </section>

    <Hr />

    <section id="open-source">
      <h2 class="text-2xl font-semibold tracking-wide">
        {t("projects.openSource")}
      </h2>
      <ul class="ml-5">
        <ProjectCard
          href={`https://postifyai.com/`}
          title="postifyAI"
          description="Automatiza tu contenido SEO con IA."
          initDate={new Date("2024-07-01")}
          locale={currentLang}
        />
      </ul>
      <ul class="ml-5">
        <ProjectCard
          href={`https://github.com/dontic/wayfinder`}
          title="Wayfinder"
          description="Rastrea tu historial de ubicaciones, posee tus datos."
          initDate={new Date("2021-05-01")}
          locale={currentLang}
        />
      </ul>
    </section>

    <Hr />

    <section id="business">
      <h2 class="text-2xl font-semibold tracking-wide">
        {t("projects.business")}
      </h2>
      <ul class="ml-5">
        <ProjectCard
          href={`https://autovisita.es`}
          title="AutoVisita"
          description="Automatiza tus visitas inmobiliarias."
          initDate={new Date("2024-09-01")}
          locale={currentLang}
        />
      </ul>
      <ul class="ml-5">
        <ProjectCard
          href={`https://gearshift.es`}
          title="GearShift"
          description="B2B Automatización y empresa de IA."
          initDate={new Date("2024-07-01")}
          locale={currentLang}
        />
      </ul>
      <ul class="ml-5">
        <ProjectCard
          href={`https://syncal.app`}
          title="SynCal"
          description="Sincroniza tus calendarios de Google y Outlook en un solo lugar."
          initDate={new Date("2024-07-01")}
          locale={currentLang}
        />
      </ul>
      <ul class="ml-5">
        <ProjectCard
          href={`https://getemil.io`}
          title="Emilio"
          description="Asistente de IA para tu Gmail."
          initDate={new Date("2023-12-01")}
          endDate={new Date("2024-07-01")}
          locale={currentLang}
        />
      </ul>
      <ul class="ml-5">
        <ProjectCard
          href={`https://fisy.es`}
          title="Fisy"
          description="Un CRM completo para clínicas en España."
          initDate={new Date("2023-05-01")}
          endDate={new Date("2023-12-01")}
          locale={currentLang}
        />
      </ul>
    </section>

    <Hr />
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-6 pt-8;
  }
  #hero h1 {
    @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  #featured h2,
  #recent-posts h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
</style>
