---
import { getCollection } from 'astro:content';
import PageLayout from '~/layouts/PageLayout.astro';
import PostsByYear from '~/components/blog/PostsByYear.astro';

// Get all posts
let posts = await getCollection('blog');

// Remove draft posts
posts = posts.filter((post) => post.data.draft !== true);

// Get only posts with locale en
posts = posts.filter((post) => post.filePath?.includes('/en/'));

// Filter posts by those that have the tag 'tech'
const techPosts = posts.filter((post) => post.data.category === 'tech');
---

<PageLayout>
  <PostsByYear posts={techPosts} />
</PageLayout>
